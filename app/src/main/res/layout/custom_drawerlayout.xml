<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottombar_ll"></RelativeLayout>

        <!-- bottom bar -->
        <LinearLayout
            android:id="@+id/bottombar_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#f2f2f2"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/main_bottom1_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/main_bottom1_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@drawable/bottom_btn_selector"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_bottom2_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/main_bottom2_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textColor="@drawable/bottom_btn_selector"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_bottom3_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/main_bottom3_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List"
                    android:textColor="@drawable/bottom_btn_selector"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_bottom4_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/main_bottom4_iv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textColor="@drawable/bottom_btn_selector"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <!--侧滑菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff">

        <ListView
            android:id="@+id/leftmenu_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:text="DrawerLayout" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
